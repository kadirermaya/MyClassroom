@model MyClassroom.Models.TeacherIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .btn {
        margin-left: 10px;
        margin-bottom: 10px;
    }
    .butt{
        width : 200px;
        height: 200px;
    }
</style>
    <br />
    <h1>Hello @Model.Teacher.FirstName</h1>
<br />

<div class="container">
    <button type="button" value="Create" class="btn btn-secondary" onclick="location.href='@Url.Action("CreateClassroom", "Teacher")'">Create Class</button>

</div>
<br />
<div class="row">
    @foreach(var item in Model.MyClassrooms)
    {
        <button type="button" class="btn btn-primary btn-lg butt"onclick="location.href='@Url.Action("SelectClassroom", "Teacher")'">@item.Name</button>
    }

</div>



