@model MyClassroom.Models.TeacherStudenViewModel

@{
    ViewData["Title"] = "StudentChat";
}

<style>
    #divCenter {
        display: block;
        margin: auto;
        margin-top: 25px;
    }

    #userInput {
        display: none
    }
</style>

<br />

<div class="container">
    <div class="card border-warning mb-3 text-center" id="divCenter" style="max-width: 20rem;">
        <div class="card-header">Message to Teacher</div>
        <div class="card-body">
            <div class="row">
                <div class="col-4"><input type="text" id="userInput" value="@Model.Student.FirstName @Model.Student.LastName" /></div>
            </div>

            <div class="form-group">
                <textarea class="form-control input" rows="3" type="text" placeholder="Your message here!" id="messageInput"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" id="sendButton" class="btn btn-warning btn-lg btn-block" value="Send Message">Send Message</button>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
