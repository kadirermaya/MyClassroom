@model MyClassroom.Models.AttendanceView

@{
    ViewData["Title"] = "Attendance";
}



<br />
<h1>Hello @Model.Parent.FirstName</h1>

<div class="card card.bg-info">
    <div class="card-header">
        <h6 class="text-center">Student Name</h6>
        <h1 class="text-center">@Model.Student.FirstName @Model.Student.LastName</h1>
    </div>
    <div class="card-body">
        <h6 class="text-center">Monthly Attendance</h6>

        <div class="container">
            <div>
                <div class="float-child">
                    <div class="badge badge-success">Positive</div>
                    <table class="table table-hover table-success col" id="students">
                        <thead>
                            <tr>
                                <th scope="col">Description</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attendance in Model.Attendances)
                            {

                                if (attendance.Description == "absent" || attendance.Description == "late")
                                {
                                    <tr style="cursor:pointer">
                                        <td>@attendance.Description</td>
                                        <td>@attendance.Date</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
    </div>


