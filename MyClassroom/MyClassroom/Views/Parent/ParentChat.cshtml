@model MyClassroom.Models.TeacherStudenViewModel

@{
    ViewData["Title"] = "ParentChat";
}

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" disabled id="userInput" value="@Model.Parent.FirstName @Model.Parent.LastName" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" class="input" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="submit" class="btn btn-primary" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        @if (@Model.Parent.Id == @Model.Student.ParentId) {
        <ul id="messagesList"></ul>
        }
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
